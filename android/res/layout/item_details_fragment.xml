<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp">
  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
          android:gravity="center_vertical">
    <ImageView android:id="@+id/image"
               android:src="@drawable/logo_items"
               android:layout_width="44dp"
               android:layout_height="44dp"
               android:layout_margin="4dp"></ImageView>
    <TextView android:id="@+id/name"
              android:text="Berserker's Axe of Smoldering"
              android:textSize="18sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    </TextView>
  </LinearLayout>
  <TextView android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text="Type">
  </TextView>
  <TextView android:id="@+id/subtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
          android:text="Subtype">
  </TextView>
  <LinearLayout android:id="@+id/specific_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

  </LinearLayout>
  <LinearLayout android:id="@+id/infix_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <TextView android:id="@+id/buff_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Buff Description"
              android:textColor="@color/text_white">
    </TextView>
    <LinearLayout android:id="@+id/infix_upgrade_attributes"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
    </LinearLayout>
    <LinearLayout android:id="@+id/bonuses"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
    </LinearLayout>
  </LinearLayout>

  <TextView android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/text_white">
  </TextView>
    <TextView android:id="@+id/game_type"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_white"
              android:text="Game Type: Pvp Pve"
            android:paddingTop="8dp">

              </TextView>

    <TextView android:id="@+id/restrictions"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Restrictions: Asura Charr"
              android:textColor="@color/text_white"></TextView>
  <TextView android:id="@+id/flags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/attribute"
          android:text="Soul Bound">
  </TextView>
  <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
    <TextView android:text="@string/vendor_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_white"/>
    <TextView android:id="@+id/vendor_value_gold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="100"
              android:paddingLeft="5dp"
              android:textColor="@color/text_white"></TextView>
    <ImageView android:id="@+id/coin_gold"
            android:src="@drawable/coin_gold" android:layout_width="wrap_content"
               android:layout_height="wrap_content"></ImageView>
    <TextView android:id="@+id/vendor_value_silver"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="100"
              android:paddingLeft="5dp"
              android:textColor="@color/text_white"></TextView>
    <ImageView android:id="@+id/coin_silver"
            android:src="@drawable/coin_silver" android:layout_width="wrap_content"
               android:layout_height="wrap_content"></ImageView>
    <TextView android:id="@+id/vendor_value_copper"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="100"
              android:paddingLeft="5dp"
              android:textColor="@color/text_white"></TextView>
    <ImageView android:id="@+id/coin_copper"
            android:src="@drawable/coin_copper" android:layout_width="wrap_content"
               android:layout_height="wrap_content"></ImageView>
  </LinearLayout>
  <TextView android:id="@+id/required_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
          android:text="Required Level: 80">
  </TextView>

  <LinearLayout android:id="@+id/recipe"
          android:layout_width="match_parent"
                android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginTop="20dp">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            android:text="@string/recipe"
            android:textColor="@color/text_white"
            android:textSize="16sp"></TextView>
    <TextView android:id="@+id/min_rating"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Min Rating: 200"
              android:textColor="@color/text_white"></TextView>
    <TextView android:id="@+id/recipe_disciplines"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Disciplines: Armorsmith Chef"
              android:textColor="@color/text_white"></TextView>
    <LinearLayout android:id="@+id/recipe_ingredients"
            android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
            ></LinearLayout>




  </LinearLayout>

</LinearLayout>
</ScrollView>