<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="40dp"
              android:paddingRight="20dp">
  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView android:id="@+id/name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Map Name"
              android:textStyle="bold"
              android:textSize="18sp"
              android:textColor="@color/text_white">
    </TextView>
    <TextView android:id="@+id/objective_num"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="(24)"
              android:paddingLeft="10dp"
              android:textColor="@color/text_white">

    </TextView>

  </LinearLayout>

  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right">
    <TextView android:id="@+id/score_red"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/world_red"
              android:text="100"
              android:textSize="14sp"
              android:layout_marginLeft="10dp">
    </TextView>

    <TextView android:id="@+id/score_blue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/world_blue"
              android:text="100"
              android:textSize="14sp"
              android:layout_marginLeft="10dp">
    </TextView>

    <TextView android:id="@+id/score_green"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/world_green"
              android:text="100"
              android:textSize="14sp"
              android:layout_marginLeft="10dp">
    </TextView>
  </LinearLayout>
</LinearLayout>